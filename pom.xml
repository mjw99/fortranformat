<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>name.mjw</groupId>
	<artifactId>FortranFormat</artifactId>
	<version>1.2.0-SNAPSHOT</version>
	<name>FortranFormat</name>

	<licenses>
		<license>
			<name>The BSD 3-Clause License</name>
			<url>http://opensource.org/licenses/BSD-3-Clause</url>
			<distribution>repo</distribution>
		</license>
	</licenses>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

		<maven.min-version>2.2.1</maven.min-version>

		<!-- Use: mvn versions:display-dependency-updates to check for updates 
			for these below -->
		<junit.version>4.12</junit.version>
	</properties>

	<prerequisites>
		<maven>${maven.min-version}</maven>
	</prerequisites>

	<developers>
		<developer>
			<name>Kevin J. Theisen</name>
			<organization>iChemLabs</organization>
			<organizationUrl>www.ichemlabs.com</organizationUrl>
			<roles>
				<role>Founder</role>
				<role>architect</role>
			</roles>
		</developer>
		<developer>
			<id>mjw99</id>
			<name>Mark J. Williamson</name>
			<email>mjw@mjw.name</email>
			<roles>
				<role>Maveniser</role>
			</roles>
			<timezone>0</timezone>
		</developer>
                <developer>
                        <id>tn300</id>
                        <name>Teodor Nikolov</name>
                        <email>tn300@cam.ac.uk</email>
                        <timezone>0</timezone>
                </developer>

	</developers>


	<scm>
		<connection>scm:git:https://bitbucket.org/mjw99/fortranformat</connection>
		<url>https://bitbucket.org/mjw99/fortranformat</url>
	</scm>

	<build>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.1</version>
				<configuration>
					<source>1.5</source>
					<target>1.5</target>
				</configuration>

			</plugin>
		</plugins>

	</build>

	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>${junit.version}</version>
			<type>jar</type>
			<scope>test</scope>
		</dependency>
	</dependencies>
</project>
